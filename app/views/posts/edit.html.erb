    <%= form_tag("/posts/#{@post.id}/update") do %>
      <div class="form">
        <div class="form-body">        
          <textarea name="content"><%= @post.content %></textarea>
          <input type="submit" value="" id="storage">
                    <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>